<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Catalog.Views.Products.ProductDetailPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Изменить" Command="{Binding ChangeProductCommand}" />
        <ToolbarItem Text="Удалить" Command="{Binding RemoveProductCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="20" Padding="15">
                <Label Text="Название:" FontSize="Medium" />
                <Label Text="{Binding Product.Name}" FontSize="Small"/>
                <Label Text="Описание:" FontSize="Medium" />
                <Label Text="{Binding Product.Description}" FontSize="Small"/>
                <Label Text="Цена:" FontSize="Medium" />
                <Label Text="{Binding Product.Price}" FontSize="Small"/>
                <Label Text="Дата поставки:" FontSize="Medium" />
                <Label Text="{Binding Product.DeliveryDate}" FontSize="Small"/>
                <Label Text="Дата отгрузки:" FontSize="Medium" />
                <Label Text="{Binding Product.ExpirationDate}" FontSize="Small"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>