<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Catalog.Views.Products.ProductDetailPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Change" Command="{Binding ChangeProductCommand}" />
        <ToolbarItem Text="Remove" Command="{Binding RemoveProductCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Name:" FontSize="Medium" />
            <Label Text="{Binding Product.Name}" FontSize="Small"/>
            <Label Text="Description:" FontSize="Medium" />
            <Label Text="{Binding Product.Description}" FontSize="Small"/>
            <Label Text="Price:" FontSize="Medium" />
            <Label Text="{Binding Product.Price}" FontSize="Small"/>
            <Label Text="Delivery Date:" FontSize="Medium" />
            <Label Text="{Binding Product.DeliveryDate}" FontSize="Small"/>
            <Label Text="Expiration Date:" FontSize="Medium" />
            <Label Text="{Binding Product.ExpirationDate}" FontSize="Small"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>